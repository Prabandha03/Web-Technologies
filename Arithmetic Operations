<body>
<button onclick= arthi_operation()>calc</button>
<script>
function arthi_operation(){
 var x=parseInt(prompt('Enter a number'));
 var y=parseInt(prompt('Enter a number'));
 var c=prompt('Enter operator');
switch(c){
case '+': var r=x+y;
document.write("addition of "+x+","+y+"="+r);
break;
case '-': var r=x-y;
document.write("subtraction of "+x+","+y+"="+r);
break;
case '*': var r=x*y;
document.write("multiplication of "+x+","+y+"="+r);
break;
case '/': var r=x/y;
document.write("division of "+x+","+y+"="+r);
break;
case '%': var r=x%y;
document.write("remainder of "+x+","+y+"="+r);
break;
defalut:document.write("Invalid operation");}}
</script>
</body>
